<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginTop="200dp"
    android:padding="10dp"
    android:clickable="true"
    android:background="@color/white"
    android:foreground="?android:attr/selectableItemBackground">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_tag_cover"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            fresco:actualImageScaleType="centerCrop"/>
        <TextView
            android:id="@+id/item_tag_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:text="30"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/item_tag_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/item_tag_cover"
            android:layout_toLeftOf="@id/item_tag_count"
            android:paddingRight="4dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/item_tag_intro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@id/item_tag_title"
            android:layout_toLeftOf="@id/item_tag_count"
            android:layout_below="@id/item_tag_title"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:textSize="16sp"/>
    </RelativeLayout>
</FrameLayout>